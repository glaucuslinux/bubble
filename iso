#!/bin/sh

# Copyright (c) 2025, Firas Khalil Khana
# Distributed under the terms of the ISC License

if [ $(id -u) -ne 0 ]; then
  echo "permission denied"
  exit 1
fi

iso="../glaucus-s6-x86-64-v3-$(date +"%Y%m%d").iso"
ver=6.14.2-2-cachyos

ISOD=../iso
PKGD=../pkg/skel

rm -fR "$ISOD"

mkdir -p \
  "$ISOD"/EFI/BOOT \
  "$ISOD"/limine \
  "$ISOD"/tmp

cp -fPp \
  ../initramfs \
  ../cross/boot/vmlinuz \
  "$ISOD"

cp -fPp /usr/share/limine/BOOTX64.EFI "$ISOD"/EFI/BOOT
cp -fPp \
  ../cerata/limine/files/limine.conf \
  /usr/share/limine/limine-bios.sys \
  /usr/share/limine/limine-bios-cd.bin \
  /usr/share/limine/limine-uefi-cd.bin \
  "$ISOD"/limine

for i in $(ls "$PKGD"); do
  bsdtar --no-same-owner -xmPf "$PKGD"/$i/*.tar.zst -C "$ISOD"/tmp
done
for i in $(ls "$PKGD-iso"); do
  bsdtar --no-same-owner -xmPf "$PKGD-iso"/$i/*.tar.zst -C "$ISOD"/tmp
done

mkdir -p \
  "$ISOD"/tmp/mnt/fs-ro \
  "$ISOD"/tmp/mnt/fs-rw \
  "$ISOD"/tmp/mnt/iso

cp -fPp ../rad/src/rad "$ISOD"/tmp/usr/bin

rm -fR \
  "$ISOD"/tmp/boot \
  "$ISOD"/tmp/usr/share/bash-completion \
  "$ISOD"/tmp/usr/share/doc \
  "$ISOD"/tmp/usr/share/info \
  "$ISOD"/tmp/usr/share/locale \
  "$ISOD"/tmp/usr/share/man

depmod -b "$ISOD"/tmp $ver

chown -R root:root "$ISOD"
chown -R 15:15 "$ISOD"/tmp/var/log/wtmpd

mkfs.erofs "$ISOD"/fs "$ISOD"/tmp

rm -fR "$ISOD"/tmp

xorriso \
  -as mkisofs \
  -o $iso \
  -iso-level 3 \
  -l \
  -r \
  -J \
  -joliet-long \
  -hfsplus \
  -apm-block-size 2048 \
  -V GLAUCUS \
  -P glaucus \
  -A glaucus \
  -p glaucus \
  -b limine/limine-bios-cd.bin \
  -boot-load-size 4 \
  -no-emul-boot \
  -boot-info-table \
  --efi-boot limine/limine-uefi-cd.bin \
  --protective-msdos-label \
  -efi-boot-part \
  --efi-boot-image \
  "$ISOD"

limine bios-install $iso

rm -fR "$ISOD"

echo "iso complete"
